<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Edit Your Lesson</h1>
  <%= simple_form_for @lesson do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :date %>
    <%= f.input :time %>
    <%= f.input :location %>
    <%= f.input :address %>
    <%= f.input :max_students %>
    <br />
    <%= f.submit 'Update', class: 'btn btn-primary' %>
  <% end %>
</div>
